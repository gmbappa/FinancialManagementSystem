@model UI.Models.AccountDto

@{
    ViewBag.Title = "Create Account";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Create New Account</h2>
        </div>

        <div class="card-body">
            @using (Html.BeginForm("Create", "ChartOfAccounts", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-horizontal">
                    <div class="mb-3 row">
                        @Html.LabelFor(model => model.AccountName, new { @class = "col-md-2 col-form-label" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.AccountName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter account name" } })
                            @Html.ValidationMessageFor(model => model.AccountName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="mb-3 row">
                        @Html.LabelFor(model => model.AccountType, new { @class = "col-md-2 col-form-label" })
                        <div class="col-md-10">
                            @Html.EnumDropDownListFor(model => model.AccountType, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.AccountType, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="mb-3 row">
                        @Html.LabelFor(model => model.IsActive, " ", new { @class = "col-md-2 col-form-label", style = "visibility:hidden;" })
                        <div class="col-md-10">
                            @Html.CheckBoxFor(model => model.IsActive, new { @class = "form-check-input" })
                            <label class="form-check-label" for="IsActive">@Html.DisplayNameFor(model => model.IsActive)</label>
                            @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-primary" />
                            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-outline-secondary ms-2" })
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="card-footer text-end">
            <a href="@Url.Action("Index", "ChartOfAccounts")" class="btn btn-outline-primary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>
